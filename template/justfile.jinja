# {{project_name}} - local development tooling

set positional-arguments

default:
  @just --list

manage +args='':
  @uv venv
  @uv sync --dev
  @uv pip install -e .
  @uv run manage.py "$@"

runserver $PYTHONDEVMODE="1":
  @uv venv
  @uv sync --dev
  @uv pip install -e .
  @uv run manage.py runserver

shell:
  @uv venv
  @uv sync --dev
  @uv pip install -e .
  @uv run manage.py shell

test +args='{{project_name}}':
  @uv venv
  @uv sync --group test
  @uv pip install -e .
  @uv run coverage erase
  @uv run python -m coverage run --source="." manage.py test "$@" --verbosity=3 --failfast --pdb
  @uv run coverage report
  @uv run coverage html
