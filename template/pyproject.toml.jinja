# https://packaging.python.org/en/latest/guides/writing-pyproject-toml/
[project]
name = "{{project_name}}"
version = "{{initial_version}}"
description = ""
authors = [
  {name = "{{author_name}}", email = "{{author_email}}"}
]
readme = "README.md"
license = { file = "LICENSE" }
requires-python = ">={{python_version}}"
{% set django_ver_parts = django_version.split('.') %}
{% set django_ver_major = django_ver_parts[0] | int + 1 %}
dependencies = [
    "django>={{django_version}},<{{django_ver_major}}.0",
    "django-linear-migrations>=2.16.0,<3.0.0",
    "environs[django]>=14.1.0,<15.0.0",
    "structlog>=24.4.0,<25.0.0",
]

[dependency-groups]
test = [
    "coverage>=7.6.7",
]
dev = [
    "django-browser-reload>=1.17.0",
    "django-debug-toolbar>=5.0.1",
    "ipdb>=0.13.13",
    "ipython>=8.31.0",
    "rich>=13.9.4",
]

[tool.coverage.report]
omit = [
  "*/tests/*"
]
exclude_lines = [
    "pragma: no cover",
    "def __repr__",
    "def __str__",
    "if settings.debug",
]

[tool.ruff]
exclude = [".pdbrc"]
indent-width = 4
line-length = 90
target-version = "py{{python_version.replace('.', '')}}"

[tool.ruff.lint]
ignore = []
select = [
    # flake8-bugbear
    "B",
    # pydocstyle
    "E",
    # isort
    "I",
    # flake8-no-pep420
    "INP",
    # Pyflakes
    "F",
    #flake8-logging-format
    "G",
    # flake8-logging
    "LOG",
    # flake8-bandit
    "S",
    # flake8-tidy-imports
    "TID",
    # flake8-print
    "T20",
    # pycodestyle warnings
    "W",
]

[tool.ruff.lint.per-file-ignores]
"tests/**.py" = ["S"]
"{{project_name}}/settings.py" = ["E501"]

[tool.ruff.lint.flake8-tidy-imports.banned-api]
"{{project_name}}.settings".msg = "Do not import project settings module - use `from django.conf import settings` instead"

[tool.coverage.run]
source = [
  "./{{project_name}}/",
]
omit = [
  "*/tests/*"
]
