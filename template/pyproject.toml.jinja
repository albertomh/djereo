# https://packaging.python.org/en/latest/guides/writing-pyproject-toml/
[project]
name = "{{project_name}}"
version = "{{initial_version}}"
description = ""
authors = [
    {name = "{{author_name}}", email = "{{author_email}}"}
]
readme = "README.md"
# create 'LICENSE' file and uncomment below line
# license-files = ["LICENSE"]
requires-python = ">={{min_python_version}}"
{% set django_ver_parts = django_version.split('.') %}
{% set django_ver_major = django_ver_parts[0] | int %}
{% set django_ver_major_next = django_ver_major + 1 %}
dependencies = [
    "django-alive>=2.0.0,<3.0.0",
    "django>={{django_version}},<{{django_ver_major_next}}.0",
    "django-allauth>=65.13.1,<66.0.0",
    {% if use_htmx %}
    "django-htmx>=1.27.0,<2.0.0",
    {% endif %}
    "django-linear-migrations>=2.19.0,<3.0.0",
    "django-permissions-policy>=4.28.0,<5.0.0",
    "django-structlog>=10.0.0,<11.0.0",
    "django-version-checks>=1.16.0,<2.0.0",
    {% if use_django_waffle %}
    "django-waffle>=5.0.0,<6.0.0",
    {% endif %}
    "environs[django]>=14.5.0,<15.0.0",
    "gunicorn>=23.0.0,<24.0.0",
    "psycopg[binary]>=3.3.0,<4.0.0",
    "psycopg-pool>=3.3.0,<4.0.0",
    "whitenoise[brotli]>=6.11.0,<7.0.0",
]

[dependency-groups]
test = [
    "axe-playwright-python>=0.1.7,<1.0.0",
    {% if use_htmx %}
    "beautifulsoup4>=4.14.2,<5.0.0",
    {% endif %}
    "coverage>=7.12.0,<8.0.0",
    "factory-boy>=3.3.3,<4.0.0",
    "parameterized>=0.9.0,<1.0.0",
    "playwright>=1.56.0,<2.0.0",
    "pytest>=9.0.0,<10.0.0",
    "requests>=2.32.5,<3.0.0",
    "responses>=0.25.8,<1.0.0",
    "tblib>=3.2.2,<4.0.0",
]
dev = [
    "django-browser-reload>=1.21.0",
    "django-debug-toolbar>=6.1.0,<7.0.0",
    "ipdb>=0.13.13,<1.0.0",
    "ipython>=9.8.0,<10.0.0",
    "rich>=14.2.0,<15.0.0",
]

{% if is_github_project %}
[project.urls]
Repository = "https://github.com"
{% endif %}

[tool.setuptools.packages.find]
# allow `pip install -e .` to find the project package
include = ["{{project_name}}"]

[[tool.mypy.overrides]]
module = "requests.*"
ignore_missing_imports = true

[tool.ruff]
exclude = [".pdbrc"]
indent-width = 4
line-length = 90
target-version = "py{{min_python_version.replace('.', '')}}"

[tool.ruff.lint]
ignore = []
select = [
    # flake8-bugbear
    "B",
    # pydocstyle
    "E",
    # isort
    "I",
    # flake8-no-pep420
    "INP",
    # Pyflakes
    "F",
    #flake8-logging-format
    "G",
    # flake8-logging
    "LOG",
    # flake8-bandit
    "S",
    # flake8-tidy-imports
    "TID",
    # flake8-print
    "T20",
    # pycodestyle warnings
    "W",
]

[tool.ruff.lint.per-file-ignores]
"tests/**.py" = ["S"]
"tests_e2e/**.py" = ["S"]
"**/tests/**.py" = ["S"]
"manage.py" = ["E501"]
"{{project_name}}/settings.py" = ["E501"]
"{{project_name}}/asgi.py" = ["E501"]
"{{project_name}}/wsgi.py" = ["E501"]

[tool.ruff.lint.flake8-tidy-imports.banned-api]
"{{project_name}}.settings".msg = "Do not import project settings module - use `from django.conf import settings` instead"

[tool.pytest]
markers = [
    "axe",
]

[tool.coverage.report]
omit = [
    "*/__init__.py",
    "*/migrations/*",
    "noxfile.py",
    "*/tests/*",
    "*/tests_e2e/*",
]
exclude_lines = [
    "pragma: no cover",
    "def __repr__",
    "def __str__",
    "if settings.debug",
]

[tool.coverage.run]
source = [
    "./{{project_name}}/",
]
omit = [
    "manage.py",
    "*/tests/*",
    "{{project_name}}/asgi.py",
    "{{project_name}}/wsgi.py",
    "{{project_name}}/settings.py",
]
